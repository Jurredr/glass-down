{
    "compilerOptions": {
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "module": "esnext",
        "target": "esnext",
        "sourceMap": true,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "strict": true,
        "isolatedModules": true,
        "types": ["node"],
        "typeRoots": ["node_modules/@types"],
        "lib": ["ESNext"]
    }
}
